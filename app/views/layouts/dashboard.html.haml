!!!
%html
  %head
    %title SiteService
    = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
    = csrf_meta_tags
    = tag :meta, :name => "stripe-key", :content => STRIPE_PUBLIC_KEY
  %body{:class => "#{body_class} layout-basic"}
    - flash.each do |key, msg|
      = content_tag :div, msg, :id => key, :class => 'user-notification'

    %header.main-header.container.dashboard-header
      %nav.main-nav
        .main-nav-left
          %a.logo{:href => "/"} meetcute.us
          = link_to "My Account", edit_user_account_path(current_user), :class => "main-nav-item"
          = link_to "Account Settings", edit_registration_path(current_user), :class => "main-nav-item"
          = link_to "My Subscription", subscription_path(current_user), :class => "main-nav-item"
          = link_to "My Site", edit_user_site_path(current_user), :class => "main-nav-item"
          = link_to "Events", events_path, :class => "main-nav-item"
        .main-nav-right
          - if current_user
            = link_to user_path(current_user), :data => { :type => "signIn" }, :class => "icon-link main-nav-item" do
              %i.icon.icon-lock
              = current_user.email
          - else
            = link_to new_user_session_path, :data => { :type => "signIn" }, :class => "icon-link main-nav-item" do
              %i.icon.icon-lock
              Sign In

          = link_to "Sign Out", destroy_user_session_path, :method => :delete , :class => "button button--light"

    = yield

    .container.container--black.footer-full
      %footer.content.legal
        .legal-left
          %p Copyright &copy; 2014 MeetCute.us, All Rights Reserved

        .legal-right
          %a.secondary-nav-item{:href => "#"} Terms
          %a.secondary-nav-item{:href => "#"} Privacy
          %a.secondary-nav-item{:href => "#"} Legal

    = javascript_include_tag "application", "data-turbolinks-track" => true
    = yield :js if content_for?(:js)
