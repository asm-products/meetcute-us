.container.single-form
  %h4.form-header Sign in
  = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
    .control-group
      = f.email_field :email, :autofocus => true, :class => "input--mega input--mega_dark input--mega_full", :placeholder => "your@email.com"
    .control-group
      = f.password_field :password, :class => "input--mega input--mega_dark input--mega_full", :placeholder => "Password"
    - if devise_mapping.rememberable?
      .control-group
        = f.check_box :remember_me, :class => "checkbox-large"
        = f.label :remember_me, :class => "checkbox-large-label"
    .control-group= f.submit "Sign in"
  = render "devise/shared/links"
