.panel
  .panel-header
    %h3 My Account
  .panel-content
    = form_for [current_user, @account] do |f|
      .control-group
        = f.label :first_name
        = f.text_field :first_name
      .control-group
        = f.label :last_name
        = f.text_field :last_name
      .control-group
        = f.label :username
        = f.text_field :username
      .control-group
        = f.label :wedding_date
        = f.date_select :wedding_date, :order => [:month, :day, :year]
      .control-group
        = f.submit "Update", :class => "button button-standard"
