%h2 Sign up
%p Start your 14 day free trial. No credit card required.
= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  = devise_error_messages!

  = f.fields_for :account, resource.account do |act_fields|
    %div 
      = act_fields.label :first_name
      = act_fields.text_field :first_name
    %div 
      = act_fields.label :last_name
      = act_fields.text_field :last_name
  %div
    = f.label :email
    %br/
    = f.email_field :email, :autofocus => true
  %div
    = f.label :password
    %br/
    = f.password_field :password
  %div
    = f.label :password_confirmation
    %br/
    = f.password_field :password_confirmation
  
  = f.fields_for :account, resource.account do |act_fields|
    %div 
      = act_fields.label :wedding_date
      = act_fields.text_field :wedding_date

  = f.fields_for :site, resource.site do |site_fields|
    %div 
      = site_fields.label :subdomain
      = site_fields.text_field :subdomain
  %div 
    = f.label :role
    = f.select :role, [:guest, :bronze, :silver, :gold, :admin]

  %div= f.submit "Sign up"
= render "devise/shared/links"